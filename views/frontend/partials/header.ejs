<%
let sitelogo = getsetting.sitelogo;
if(sitelogo){
  let _sitelogoLnknew = sitelogo.replace(/\\/g, '/');
  sitelogo = _sitelogoLnknew.split( 'public/' ).join( '/' );
  sitelogo = sitelogo;
}
%>
<header class="header_section">
    <div class="container-fluid">
      <nav class="navbar navbar-expand-lg custom_nav-container">
        <a class="navbar-brand" href="/">
          <img src="<%= sitelogo %>" alt="" /><span>
            Ecommerce
          </span>
        </a>

        <div class="navbar-collapse" id="">
          <div class="container">
            <div class=" mr-auto flex-column flex-lg-row align-items-center">
              <ul class="navbar-nav justify-content-between ">
                <div class="d-none d-lg-flex">
                  <li class="nav-item">
                    <a class="nav-link" href="fruit.html">
                      Customer Number : <%= getsetting.phone %></a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="service.html">
                      <%= getsetting.email %> 
                    </a>
                  </li>
                </div>
                <div class=" d-none d-lg-flex">
                  <% if(isUserAuthenticated){ %>
                  <li class="nav-item">
                    <a class="nav-link" href="/auth/my-account">My Account</a>
                  </li>
                  <% } %>
                  <li class="nav-item">
                    <% if(!isUserAuthenticated){ %>
                      <a class="nav-link" href="/auth/login">Login</a>
                    <% } else { %>
                      <a class="nav-link" href="/auth/logout">Logout</a>
                    <% } %>
                  </li>
                  <form class="form-inline my-2 ml-5 mb-3 mb-lg-0">
                    <!-- <button class="btn  my-2 my-sm-0 nav_search-btn" type="submit"></button> -->
                    <!-- <a href="/cart" class="my-2 my-sm-0 cart_icon_top"><i class="fa fa-shopping-cart"></i><span>5</span></a> -->
                    <div class="cart_icon_top">
                      <a href="/cart">
                        <span class="count">
                          <% if(cart && cart.items.length > 0){ %>
                            <%= cart.items.length %>
                          <% } else { %>
                            0
                          <% } %>
                        </span>
                        <i class="fa fa-shopping-cart"></i>
                      </a>                      
                    </div>
                  </form>
                </div>
              </ul>
            </div>
          </div>

          <div class="custom_menu-btn">
            <button onclick="openNav()"></button>
          </div>
          <div id="myNav" class="overlay">
            <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
            <div class="overlay-content">
              <a href="/">HOME</a>
              <a href="/products">PRODUCTS</a>
              <a href="/categories">CATEGORIES</a>
            </div>
          </div>
        </div>
      </nav>
    </div>
  </header>