<!DOCTYPE html>
<html>
<head>
  <!-- Basic -->
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <!-- Mobile Metas -->
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <!-- Site Metas -->
  <meta name="keywords" content="" />
  <meta name="description" content="" />
  <meta name="author" content="" />
  <title><%= pagetitle %></title>
  <%- include('./partials/head') -%>
  <link rel="stylesheet" href="//code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.css">
</head>
<body class="single-product">
  <div class="hero_area">
    <%- include('./partials/header') -%>
  </div>
  <section class="detail_section">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="heading_container text-center">
            <h2>
                <%= pagetitle %>
            </h2>
          </div>
        </div>
      </div>
    </div>
  </section>
  <div class="container mb-4">
    <div class="row">
        <div class="col-md-3">
            <p>Hi, <%= user.name %></p>
            <div class="myaccount-sidebar">
                <ul class="nav flex-column nav-pills">
                    <li class="nav-item">
                    <a class="nav-link" href="/auth/my-account">My Account</a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link " href="/auth/orders">Orders</a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link active" href="/auth/changepassword">Change Password</a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="col-md-9">
            <% if(typeof infomessages !== "undefined"){ %>
                <%- infomessages %>
            <% } %>
            <form action="" method="post">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="newpasssword">New Password</label>
                        <input type="password" class="form-control" id="newpasssword" name="newpasssword" placeholder="" value="" required="">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="confirm_password">Confirm Password</label>
                        <input type="password" class="form-control" id="confirm_password" name="confirm_password" placeholder="" value="" required="">
                    </div>
                </div>                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <hr class="mb-4">
                        <button class="btn btn-secondary btn-block" type="submit">Save</button>
                        <input type="hidden" name="save_type" value="_myaccntchngepass_nonce">
                        <input type="hidden" name="nonce" value="<%= nonce %>">
                    </div>
                </div>
            </form>
        </div>
    </div>
  </div>
  <!-- footer section -->
  <%- include('./partials/footer') -%>
  <!-- footer section -->
  <%- include('./partials/footer-script') -%>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.2.1/owl.carousel.js"></script>
  
</body>
</html>